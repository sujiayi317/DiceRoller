    <!-- Use the tools:src attribute in the <ImageView> element in your layout to display an
    image in only Android Studio's preview or design editor. You can then use an empty image
    for android:src for the final app.
    Use the tools namespace in the Android layout file to create placeholder content or
    hints for layout in Android Studio. Data declared by tools attributes is not used in the
    final app.-->
    <ImageView
        android:id="@+id/dice_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/empty_dice"
        tools:src="@drawable/dice_1" />

    <ImageView
        android:id="@+id/dice_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/empty_dice"
        tools:src="@drawable/dice_1" />

    <Button
        android:id="@+id/roll_button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:text="@string/roll_label" />

    <Button
        android:id="@+id/clear_button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:text="@string/clear_label" />

